<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cyborg="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <com.nu.art.cyborg.core.CyborgView
        android:id="@+id/StackTest"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        cyborg:controller="com.nu.art.cyborg.core.CyborgStackController"
        cyborg:transitionDuration="400"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/AddLayerKeepInStack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/Text_AddAndKeep"
            />

        <TextView
            android:id="@+id/AddLayerKeepBackground"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/Text_KeepBackground"
            />

        <TextView
            android:id="@+id/AddLayerDontKeepInStack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/Text_AddDontKeep"
            />

        <TextView
            android:id="@+id/Bug1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="bug 1"
            />
        <TextView
            android:id="@+id/Bug2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="only\none"
            />

        <TextView
            android:id="@+id/MultiTransitions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:text="Multi Transitions"
            />

    </LinearLayout>
</LinearLayout>